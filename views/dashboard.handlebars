<!-- Dashboard Header -->
<div class="dashboard-container">
  <div class="dashboard-header">
    <div class="row">
      <div class="col-auto">
        <h2>Welcome to your Dashboard, {{username}}!</h2>
      </div>
    </div>
  </div>

  <!-- Create New Post Section -->
  <div class="create-post-section">
    <div class="row mt-4">
      <div class="col-md-6">
        <h3>Create a New Post:</h3>

        <form class="form new-post-form">
          <!-- Hidden input to store user_id -->
          <input type="hidden" id="user-id" value={{user_id}}>

          <div class="form-group">
            <label for="post-title">Title:</label>
            <input class="form-input" type="text" id="post-title" name="post-title" />
          </div>
          <div class="form-group">
            <label for="post-desc">Content:</label>
            <textarea class="form-input" id="post-desc" name="post-desc"></textarea>
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-primary">Create</button>
          </div>
        </form>
      </div>

      <!-- Display Existing Posts -->
      {{#if posts.length}}
      <div class="dbPostsList">
        <h3>Current posts:</h3>

        <!-- Iterate through posts -->
        {{#each posts as |post|}}
        <div class="postEach">
          <div>
            <div>
              <h4><a href="/post/{{post.id}}">{{post.title}}</a></h4>
            </div>
            <!-- Edit and Delete Buttons -->
            <div>
              <button class="button is-danger" data-id={{post.id}} data-action="delete">DELETE</button>
            </div>
            <div>
              <button class="button is-warning" data-id={{post.id}} data-action="edit">Edit</button>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
      {{/if}}
    </div>
  </div>
</div>
<!-- Add the correct script source for profile.js -->
<script src='/js/blog-post.js'></script>
