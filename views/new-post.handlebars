<!-- Create New Post Section -->
<div class="create-post-section">
  <div class="row mt-4">
    <div class="col-md-6">
      <h3>Create a New Post:</h3>

      <form class="form new-post-form">
        <!-- Hidden input to store user_id -->
        <input type="hidden" id="user-id" value={{user_id}}>

        <div class="form-group">
          <label for="post-title">Title:</label>
          <input class="form-input" type="text" id="post-title" name="post-title" />
        </div>
        <div class="form-group">
          <label for="post-desc">Content:</label>
          <textarea class="form-input" id="post-desc" name="post-desc"></textarea>
        </div>
        <div class="form-group">
          <button type="submit" class="button is-primary">Create</button>
        </div>
      </form>
    </div>

   <script src="/public/js/blog-post.js"></script>
